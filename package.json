{
  "name": "fetchmax-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "The ultimate universal HTTP client for JavaScript and TypeScript",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:core && npm run build:plugins",
    "build:core": "cd packages/core && npm run build",
    "build:plugins": "node scripts/build-plugins.js",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "bench": "vitest bench",
    "clean": "rimraf packages/*/dist node_modules/.cache",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^12.10.3",
    "msw": "^2.0.8",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "http",
    "fetch",
    "ajax",
    "request",
    "client",
    "axios",
    "api",
    "rest",
    "graphql",
    "universal",
    "isomorphic",
    "browser",
    "node",
    "deno",
    "bun"
  ],
  "author": "FetchMax Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fetchmax/fetchmax.git"
  },
  "bugs": {
    "url": "https://github.com/fetchmax/fetchmax/issues"
  },
  "homepage": "https://fetchmax.dev",
  "engines": {
    "node": ">=18.0.0"
  }
}
