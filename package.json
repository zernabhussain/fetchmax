{
  "name": "fetchmax-monorepo",
  "version": "1.0.1",
  "private": true,
  "description": "The ultimate universal HTTP client for JavaScript and TypeScript",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:core && npm run build:plugins",
    "build:core": "cd packages/core && npm run build",
    "build:plugins": "node scripts/build-plugins.cjs",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:platforms": "npm run test:platforms:all",
    "test:platforms:all": "npm run test:platforms:node && npm run test:platforms:bun && npm run test:platforms:deno && npm run test:platforms:browsers",
    "test:platforms:node": "bash tests/platforms/runners/run-node.sh",
    "test:platforms:node:run": "vitest run --config tests/platforms/configs/vitest.node.config.ts",
    "test:platforms:bun": "bash tests/platforms/runners/run-bun.sh",
    "test:platforms:deno": "deno run --allow-all tests/platforms/runners/run-deno.ts",
    "test:platforms:browsers": "ts-node tests/platforms/runners/run-browsers.ts",
    "test:platforms:chrome": "vitest run --config tests/platforms/configs/vitest.browser.config.ts --browser.name=chromium",
    "test:platforms:firefox": "vitest run --config tests/platforms/configs/vitest.browser.config.ts --browser.name=firefox",
    "test:platforms:safari": "vitest run --config tests/platforms/configs/vitest.browser.config.ts --browser.name=webkit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "bench": "vitest bench",
    "clean": "rimraf packages/*/dist node_modules/.cache",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/browser": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^12.10.3",
    "msw": "^2.0.8",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "http",
    "fetch",
    "ajax",
    "request",
    "client",
    "axios",
    "api",
    "rest",
    "graphql",
    "universal",
    "isomorphic",
    "browser",
    "node",
    "deno",
    "bun"
  ],
  "author": "FetchMax Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zernabhussain/fetchmax.git"
  },
  "bugs": {
    "url": "https://github.com/zernabhussain/fetchmax/issues"
  },
  "homepage": "https://github.com/zernabhussain/fetchmax#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "msw": {
    "workerDirectory": [
      "tests\\platforms\\browser\\public"
    ]
  }
}