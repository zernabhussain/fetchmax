{
  "name": "@fetchmax/plugin-ai-summarize",
  "version": "1.0.0",
  "description": "AI-powered content summarization plugin for FetchMax",
  "keywords": [
    "fetchmax",
    "plugin",
    "summarize",
    "ai",
    "nlp"
  ],
  "author": "FetchMax Team",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@fetchmax/core": "^1.0.0",
    "@fetchmax/plugin-ai-agent": "^1.0.0"
  },
  "devDependencies": {
    "@fetchmax/core": "workspace:*",
    "@fetchmax/plugin-ai-agent": "workspace:*"
  }
}
